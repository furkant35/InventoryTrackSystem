@model InventoryTrackSystem.Model.Dtos.Product.ProductGetDto
@{
    ViewData["Title"] = "Ürün Güncelle";
    Layout = "_Layout";
}

<div class="bg-light py-4">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-11 col-lg-10 col-xl-9">

                <nav aria-label="breadcrumb" class="mb-3">
                    <ol class="breadcrumb bg-white rounded-3 px-3 py-2 shadow-sm">
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("List", "Product")" class="text-decoration-none">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-house-door me-1" viewBox="0 0 16 16">
                                    <path d="M8.354 1.146a.5.5 0 0 0-.708 0l-6 6A.5.5 0 0 0 1.5 7.5v7a.5.5 0 0 0 .5.5h4.5a.5.5 0 0 0 .5-.5v-4h2v4a.5.5 0 0 0 .5.5H14a.5.5 0 0 0 .5-.5v-7a.5.5 0 0 0-.146-.354L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293zM2.5 14V7.707l5.5-5.5 5.5 5.5V14H10v-4a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5v4z"/>
                                </svg>
                                Ürünler
                            </a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Ürün Düzenle</li>
                    </ol>
                </nav>

                <div class="mb-4">
                    <div class="d-flex align-items-center">
                        <div class="bg-white rounded-3 p-3 shadow-sm me-3">
                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-pencil-square text-warning" viewBox="0 0 16 16">
                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2.147-2.147 1.043-1.043a.5.5 0 0 1 .707 0l1.44 1.44zM13.752 4.396l-2.147-2.147-7.9 7.9a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l7.9-7.9z"/>
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11A.5.5 0 0 1 2.5 2H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
                            </svg>
                        </div>
                        <div>
                            <h2 class="fw-bold mb-1">Ürün Düzenle</h2>
                            <p class="text-muted mb-0 small">Var olan ürünün bilgilerini güncelleyebilirsiniz</p>
                        </div>
                    </div>
                </div>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show shadow-sm border-0 mb-4" role="alert">
                        <div class="d-flex align-items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-check-circle-fill me-2" viewBox="0 0 16 16">
                                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                            </svg>
                            <div><strong>Başarılı!</strong> @TempData["Success"]</div>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show shadow-sm border-0 mb-4" role="alert">
                        <div class="d-flex align-items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-exclamation-triangle-fill me-2" viewBox="0 0 16 16">
                                <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5m.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2"/>
                            </svg>
                            <div><strong>Hata!</strong> @ViewBag.ErrorMessage</div>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <div class="card border-0 shadow-sm rounded-4">
                    <div class="card-body p-4 p-md-5">
                        @using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(x => x.Id)

                            <div class="row g-4">
                                <div class="col-lg-6">
                                    <div class="border rounded-3 p-4 bg-light bg-opacity-50 h-100">
                                        <h5 class="fw-bold mb-4 text-dark">
                                            <i class="bi bi-info-circle text-warning me-2"></i>
                                            Ürün Bilgileri
                                        </h5>

                                        <div class="mb-3">
                                            <label class="form-label fw-semibold small">Ürün Adı</label>
                                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control form-control-lg rounded-3", placeholder = "Ürün adı girin" })
                                            @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger small mt-1 d-block" })
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label fw-semibold small">Ürün Kodu</label>
                                            @Html.TextBoxFor(x => x.Code, new { @class = "form-control form-control-lg rounded-3", placeholder = "Ürün kodu girin" })
                                            @Html.ValidationMessageFor(x => x.Code, "", new { @class = "text-danger small mt-1 d-block" })
                                        </div>

                                        <div class="mb-0">
                                            <label class="form-label fw-semibold small">Marka</label>
                                            @Html.DropDownListFor(x => x.BrandId,
                                                new SelectList(ViewBag.Brands, "Id", "Name", Model.BrandId),
                                                "Marka Seçiniz",
                                                new { @class = "form-select form-select-lg rounded-3" })
                                            @Html.ValidationMessageFor(x => x.BrandId, "", new { @class = "text-danger small mt-1 d-block" })
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="border rounded-3 p-4 bg-light bg-opacity-50 h-100">
                                        <h5 class="fw-bold mb-4 text-dark">
                                            <i class="bi bi-cash-coin text-success me-2"></i>
                                            Stok & Fiyat
                                        </h5>

                                        <div class="mb-3">
                                            <label class="form-label fw-semibold small">Stok</label>
                                            <div class="input-group input-group-lg">
                                                @Html.TextBoxFor(x => x.Stock, new { @class = "form-control rounded-start-3", type = "number", min = "0" })
                                                <span class="input-group-text bg-white rounded-end-3">adet</span>
                                            </div>
                                            @Html.ValidationMessageFor(x => x.Stock, "", new { @class = "text-danger small mt-1 d-block" })
                                        </div>

                                        <div class="mb-0">
                                            <label class="form-label fw-semibold small">Fiyat</label>
                                            <div class="input-group input-group-lg">
                                             @Html.TextBoxFor(x => x.Price, new {
    @class = "form-control rounded-start-3",
    type = "number",
    step = "0.01",
    min = "0"
})

                                                <span class="input-group-text bg-white rounded-end-3 fw-semibold text-success">₺</span>
                                            </div>
                                            @Html.ValidationMessageFor(x => x.Price, "", new { @class = "text-danger small mt-1 d-block" })
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="border rounded-3 p-4 bg-light bg-opacity-50">
                                        <h5 class="fw-bold mb-3 text-dark">
                                            <i class="bi bi-chat-text text-info me-2"></i>
                                            Ürün Açıklaması
                                        </h5>
                                        @Html.TextAreaFor(x => x.Description, new { @class = "form-control form-control-lg rounded-3", rows = "4", placeholder = "Ürün açıklaması..." })
                                        @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger small mt-1 d-block" })
                                    </div>
                                </div>
                            </div>

                            <div class="row mt-4 pt-4 border-top">
                                <div class="col-12">
                                    <div class="d-flex flex-column flex-sm-row gap-3 justify-content-end">
                                        <a href="@Url.Action("List", "Product")" class="btn btn-lg btn-outline-secondary rounded-3 px-4">
                                            <i class="bi bi-arrow-left me-2"></i> Geri Dön
                                        </a>
                                        <button type="submit" class="btn btn-lg btn-warning text-dark rounded-3 px-5 shadow-sm">
                                            <i class="bi bi-pencil-square me-2"></i> Güncelle
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
