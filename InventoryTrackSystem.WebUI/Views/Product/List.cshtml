@model IEnumerable<InventoryTrackSystem.Model.Dtos.Product.ProductGetDto>

@{
    ViewData["Title"] = "Ürün Listesi";
    Layout = "_Layout";
}

<div class="min-vh-100 py-4">
    <div class="container">

        <div class="row mb-4">
            <div class="col">
                <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3">
                    <div>
                        <h2 class="fw-bold mb-1 d-flex align-items-center">
                            <span class="rounded-3 p-2 me-2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor" class="bi bi-box-seam text-primary" viewBox="0 0 16 16">
                                    <path d="M8.186 1.113a.5.5 0 0 0-.372 0L1.846 3.5l2.404.961L10.404 2zm3.564 1.426L5.596 5 8 5.961 14.154 3.5zm3.25 1.7-6.5 2.6v7.922l6.5-2.6V4.24zM7.5 14.762V6.838L1 4.239v7.923zM7.443.184a1.5 1.5 0 0 1 1.114 0l7.129 2.852A.5.5 0 0 1 16 3.5v8.662a1 1 0 0 1-.629.928l-7.185 2.874a.5.5 0 0 1-.372 0L.63 13.09a1 1 0 0 1-.63-.928V3.5a.5.5 0 0 1 .314-.464z" />
                                </svg>
                            </span>
                            Ürün Yönetimi
                        </h2>
                        <p class="text-muted mb-0 ms-5 ps-2">Tüm ürünlerinizi buradan yönetin</p>
                    </div>

                    <div>
                        <a href="@Url.Action("Create", "Product")" class="btn btn-primary btn-lg rounded-3 shadow-sm px-4">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus-circle me-2" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
                            </svg>
                            Yeni Ürün Ekle
                        </a>
                    </div>
                </div>
            </div>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show shadow-sm border-0 rounded-3 mb-4" role="alert">
                <div class="d-flex align-items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-check-circle-fill me-3 flex-shrink-0" viewBox="0 0 16 16">
                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                    </svg>
                    <div class="flex-grow-1"><strong>Başarılı!</strong> @TempData["Success"]</div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show shadow-sm border-0 rounded-3 mb-4" role="alert">
                <div class="d-flex align-items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill me-3 flex-shrink-0" viewBox="0 0 16 16">
                        <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5m.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2" />
                    </svg>
                    <div class="flex-grow-1"><strong>Hata!</strong> @TempData["ErrorMessage"]</div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light border-bottom">
                            <tr>
                                <th class="px-4 py-3 text-muted fw-semibold small">ID</th>
                                <th class="px-3 py-3 text-muted fw-semibold small">ÜRÜN ADI</th>
                                <th class="px-3 py-3 text-muted fw-semibold small">KODU</th>
                                <th class="px-3 py-3 text-muted fw-semibold small">MARKA</th>
                                <th class="px-3 py-3 text-muted fw-semibold small text-end">STOK</th>
                                <th class="px-3 py-3 text-muted fw-semibold small text-end">FİYAT</th>
                                <th class="px-4 py-3 text-muted fw-semibold small text-end">İŞLEMLER</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model == null || !Model.Any())
                            {
                                <tr>
                                    <td colspan="7" class="text-center py-5">
                                        <div class="py-5">
                                            <div class="mb-4">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="currentColor" class="bi bi-inbox text-muted opacity-50" viewBox="0 0 16 16">
                                                    <path d="M4.98 4a.5.5 0 0 0-.39.188L1.54 8H6a.5.5 0 0 1 .5.5 1.5 1.5 0 1 0 3 0A.5.5 0 0 1 10 8h4.46l-3.05-3.812A.5.5 0 0 0 11.02 4zm9.954 5H10.45a2.5 2.5 0 0 1-4.9 0H1.066l.32 2.562a.5.5 0 0 0 .497.438h12.234a.5.5 0 0 0 .496-.438zM3.809 3.563A1.5 1.5 0 0 1 4.981 3h6.038a1.5 1.5 0 0 1 1.172.563l3.7 4.625a.5.5 0 0 1 .105.374l-.39 3.124A1.5 1.5 0 0 1 14.117 13H1.883a1.5 1.5 0 0 1-1.489-1.314l-.39-3.124a.5.5 0 0 1 .106-.374z" />
                                                </svg>
                                            </div>
                                            <h5 class="text-muted fw-semibold mb-2">Henüz Ürün Yok</h5>
                                            <p class="text-muted mb-4">Sisteme ilk ürününüzü ekleyerek başlayın</p>
                                            <a href="@Url.Action("Create", "Product")" class="btn btn-primary rounded-3 px-4">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-lg me-2" viewBox="0 0 16 16">
                                                    <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2" />
                                                </svg>
                                                İlk Ürünü Ekle
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var p in Model)
                                {
                                    <tr class="border-bottom">
                                        <td class="px-4 py-3">
                                            <span class="badge bg-light text-dark border fw-semibold">@p.Id</span>
                                        </td>
                                        <td class="px-3 py-3">
                                            <div class="fw-semibold text-dark mb-1">@p.Name</div>
                                            @if (!string.IsNullOrWhiteSpace(p.Description))
                                            {
                                                <div class="text-muted small">
                                                    @(p.Description.Length > 70 ? p.Description[..70] + "..." : p.Description)
                                                </div>
                                            }
                                        </td>
                                        <td class="px-3 py-3">
                                            <span class="font-monospace text-muted small">@p.Code</span>
                                        </td>
                                        <td class="px-3 py-3">
                                            <span class="badge bg-primary bg-opacity-10 text-primary fw-normal px-3 py-2">
                                                @p.BrandName
                                            </span>
                                        </td>
                                        <td class="px-3 py-3 text-end">
                                            <span class="badge bg-info bg-opacity-10 text-info fw-semibold px-3 py-2">
                                                @p.Stock adet
                                            </span>
                                        </td>
                                        <td class="px-3 py-3 text-end">
                                            <span class="fw-bold text-success fs-6">@p.Price.ToString("C")</span>
                                        </td>
                                        <td class="px-4 py-3 text-end">
                                            <div class="btn-group shadow-sm" role="group">
                                                <a href="@Url.Action("Edit", new { id = p.Id })"
                                                   class="btn btn-sm btn-outline-primary">
                                                    Düzenle
                                                </a>
                                                <a href="@Url.Action("Delete", new { id = p.Id })"
                                                   class="btn btn-sm btn-outline-danger"
                                                   onclick="return confirm('Bu ürünü silmek istediğinize emin misiniz?');">
                                                    Sil
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            @if (Model != null && Model.Any())
            {
                <div class="card-footer bg-light border-top px-4 py-3">
                    <div class="text-muted small">
                        <strong>Toplam @Model.Count() ürün</strong> listeleniyor
                    </div>
                </div>
            }
        </div>
    </div>
</div>